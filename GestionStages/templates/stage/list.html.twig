{% extends 'base.html.twig' %}

{% block body %}
    <table class="table text-center">
        <tr>
            <th class="active text-center">Poste</th>
            <th class="active text-center">Societe</th>
            <th class="active text-center">Catégorie</th>
            <th class="active text-center">Ville</th>
        </tr>

        {% for stage in stages %}
            <tr>
                <td><a href="{{ path('stage.show', {id: stage.id}) }}">{{ stage.poste }}</a></td>
                <td>
                    <a href="#">
                        {{ stage.societe }}
                    </a>
                </td>
                <td>{{ stage.categorie.getNom() }}</td>
                <td>{{ stage.ville }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('stage.edit', {id: stage.id}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </td>
                <td>
                    <a href="{{ path('stage.delete', {'id': stage.id}) }}" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        Supprimer
                    </a>

                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}